<%= form_for(@message, :html=>{:class => 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label class="control-label col-md-2">投稿者</label>
    <div class="col-md-2">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-offset-1 col-md-1">年齢</label>
    <div class="col-md-1">
      <%= f.text_field :age, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">投稿内容</label>
    <div class="col-sm-5">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  
<% end %>