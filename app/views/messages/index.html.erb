<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
        <ul>
            <li><span class="label label-info"><%= message.name %></span>
            <br><%= message.body %><br></li>
        </ul>
        <% end %>
    </div>
</div>
<%= form_for(@message) do |f| %>

  <br>
  <span class="label label-default">投稿者</span>
  <br>
  <%= f.text_field :name %>
  <br>
  <br>
  <span class="label label-default">投稿内容</span>
  <br>
  <%= f.text_area :body, :size=>"100x10" %>
  <br>
  <br>
  <%= f.submit class: "btn btn-sm btn-primary" %>
  
<% end %>