<div class="panel-heading">
  メッセージ一覧
</div>
  <div class="panel-body">
    <ul>  
      <% @messages.each do |message| %>
        
      <li><span class="label label-info"><%= message.name %></span>
        <%= message.body %>
      </li>
      ( <%= link_to "edit" , edit_message_path(message) %>
        <%= link_to "destroy" , message , method: :delete , data: { confirm: '削除してもよろしいでしょうか' } %>
      )
      <br>
    <% end %>
  </div>
</div>

<%= render 'form' %>
